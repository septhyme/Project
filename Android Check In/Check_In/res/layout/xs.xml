<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
         <Button
         android:id="@+id/mbt11"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/mcb11"
         android:layout_alignRight="@+id/mcb11"
         android:layout_centerVertical="true"
         android:background="@drawable/login_button_bg"
         android:text="登录"
         android:textColor="@android:color/white"
         android:textSize="18sp" />

         <CheckBox
             android:id="@+id/mcb11"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/mbt11"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="31dp"
             android:checked="false"
             android:text="记住学号"
             android:textColor="@color/black" />

         <Button
             android:id="@+id/mbt12"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/mbt11"
             android:layout_alignRight="@+id/mbt11"
             android:layout_below="@+id/mbt11"
             android:layout_marginTop="18dp"
             android:background="@drawable/login_button_bg"
             android:text="立即注册"
             android:textColor="@android:color/white"
             android:textSize="18sp" />

         <com.example.beta2.ClearEditText
             android:id="@+id/s_pwd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/met11"
             android:layout_alignRight="@+id/met11"
             android:layout_below="@+id/met11"
             android:layout_marginTop="14dp"
             android:background="@drawable/login_edittext_bg"
             android:drawableLeft="@drawable/account_icon"
             android:drawableRight="@drawable/delete_selector"
             android:ems="10"
             android:hint="请输入密码"
             android:password="true"
             android:singleLine="true" />

         <com.example.beta2.ClearEditText
             android:id="@+id/met11"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="33dp"
             android:background="@drawable/login_edittext_bg"
             android:drawableLeft="@drawable/icon_user"
             android:drawableRight="@drawable/delete_selector"
             android:ems="10"
             android:hint="请输入学号"
             android:phoneNumber="true"
             android:singleLine="true" >

             <requestFocus />
         </com.example.beta2.ClearEditText>

</RelativeLayout>