<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@id/btnBack"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="left"
        android:background="@drawable/down" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@id/tvLeftSpeed"
            android:layout_width="60.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="5.0dip"
            android:gravity="center"
            android:text="@string/leftspeed" />

        <android.widget.SeekBar
            android:id="@id/leftspeed"
            android:layout_width="100.0dip"
            android:layout_height="30.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginLeft="5.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@id/tvRightSpeed"
            android:layout_width="60.0dip"
            android:layout_height="20.0dip"
            android:layout_marginRight="5.0dip"
            android:gravity="center"
            android:text="@string/rightspeed" />

        <android.widget.SeekBar
            android:id="@id/rightspeed"
            android:layout_width="100.0dip"
            android:layout_height="30.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginRight="5.0dip" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnTrack"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:background="@drawable/track"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btnBizhang"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginRight="50.0dip"
        android:background="@drawable/bizhang"
        android:visibility="invisible" />

    <ImageButton
        android:id="@id/btnLeft"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:background="@drawable/left" />

    <ImageButton
        android:id="@id/btnRight"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/right" />

</LinearLayout>